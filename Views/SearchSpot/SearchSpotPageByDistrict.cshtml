@{
ViewData["Title"] = "SearchSpotPageByDistrict";
}
@section css {
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/Dialog.css">
<link rel="stylesheet" href="~/css/SearchSpotPageByDistrict.css">
<link href="https://fonts.googleapis.com/css?family=Noto+Sans+TC&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

}
@section js {
<script src="~/js/SearchSpotPageByDistrict.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
}

<body>
    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">新增景點</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="">*必填</label>
                            </div>
                            <div class="form-group">
                                <label for="placeinput">*景點名稱</label>
                                <input type="text" class="form-control" id="placeinput"
                                    aria-describedby="placeinputHelp" placeholder="Enter">
                                <small id="placeinputHelp" class="form-text text-muted">21個字以內
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="numberinput">*郵遞區號</label>
                                <input type="text" class="form-control" id="numberinput"
                                    aria-describedby="numberinputHelp" placeholder="Enter" readonly>
                            </div>
                            <div class="form-group">
                                <label for="front_addressinput">*縣市區域</label>
                                <input type="text" class="form-control" id="front_addressinput"
                                    aria-describedby="front_addressinputHelp" placeholder="Enter" readonly>
                            </div>
                            <div class="form-group">
                                <label for="addressinput">*路/街道號碼</label>
                                <input type="text" class="form-control" id="addressinput"
                                    aria-describedby="addressinputHelp" placeholder="Enter">
                                <small id="addressinputinputHelp" class="form-text text-muted">ex:中園路二段501號 39個字以內
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="timearea">*營業時間</label>
                                <input type="text" class="form-control" id="timearea" aria-describedby="timeareaHelp"
                                    placeholder="Enter">
                                <small id="timeareaHelp" class="form-text text-muted">265個字以內
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="descriptionarea">*景點介紹</label>
                                <textarea class="form-control" id="descriptionarea"
                                    aria-describedby="descriptionareaHelp" placeholder="Enter" rows="3"></textarea>
                                <small id="descriptionareaHelp" class="form-text text-muted">1165個字以內
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="image">*圖片連結</label>
                                <textarea class="form-control" id="image" aria-describedby="imageHelp"
                                    placeholder="Enter" rows="3"></textarea>
                                <small id="imageHelp" class="form-text text-muted">請勿上傳有毒連結
                                </small>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                        <button type="button" class="btn btn-primary" id="submit_btn">新增</button>
                    </div>
                </div>
            </div>
        </div>
           <font size="5"></font>
            </h1>
            <marquee scrollamount="10"><img src="~/Img/SearchSpotPageByDistrict/中央.jpg"><img
                src="~/Img/SearchSpotPageByDistrict/大溪.jpg"><img src="~/Img/SearchSpotPageByDistrict/小人國.jpg"><img
                src="~/Img/SearchSpotPageByDistrict/小烏來.jpg"><img src="~/Img/SearchSpotPageByDistrict/石門.jpg"><img
                src="~/Img/SearchSpotPageByDistrict/中壢夜市.jpg"><img src="~/Img/SearchSpotPageByDistrict/可樂.jpg"><img
                src="~/Img/SearchSpotPageByDistrict/拉拉山.jpg"><img src="~/SearchSpotPageByDistrict/高鐵.jpg"></marquee>
            <br>
            <h2 align="center" id="title"></h2>
                    
            <div class="function_btn_area">
                <button type="button" id="create_spot_btn" class="btn btn-primary edit_btn" data-toggle="modal"
                    data-target="#exampleModal">
                    新增景點
                </button>
                <button class="btn btn-success" id="view_Itneary_btn" type="button" onclick="">行程規劃</button>
            </div>
            <div position: absolute;>
                <table border="1" id="SpotListTable">
                    <thead>
                        <td align="center" scope="col" width="9%">景點編號</td>
                        <td align="center" scope="col" width="15%">景點名稱</td>
                        <td align="center" scope="col" width="9%">郵遞區號</td>
                        <td align="center" scope="col" width="20%">地址</td>
                        <td align="center" scope="col" width="25%">開放時間</td>
                        <td align="center" colspan="2" align='center' width="22%" >
                            操作
                        </td>
                    </thead>
                </table>
            </div>
    </div>
    <button type="button" id="BackTop" class="toTop-arrow"></button>

</body>