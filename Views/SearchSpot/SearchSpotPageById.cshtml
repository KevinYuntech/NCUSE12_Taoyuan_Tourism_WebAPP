
@model NCUSE12_Taoyuan_Tourism_WebAPP.Models.SpotListViewModel  

@{
    ViewData["Title"] = "SearchSpotPageById";
}
@section css {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/SearchSpotPageById.css">
}
@section js {
 
      <script src="~/js/SearchSpotPageById.js"></script>
}
<body>

  <div>
    <h2 align="center"><font size="30" color=#0000AA face="DFKai-sb">景點介紹</font></h1>
  </div>
  <div align="right">
    <input type="button" value="加入行程" name="加入行程" style="width:150px;height:50px;">
  </div>
  <div align="center">
    <img src= "" width="500" height="250" id="spot_image">
  </div>

  <div align="center">
    <br></br>
  <table border="1" type="p">
    @foreach (var item in Model.Data)
    {
    <div id="spot_id">
      @item.Id
    </div>
    <tr>
        <td align='center' valign="middle" width="100px" id="spot_id" ><font face="DFKai-sb" size="5" color=#0000AA>編號</font></td><td align='center' valign="middle" width="700px"><font face="DFKai-sb" color=#0000AA>@item.Id</font></td>

    </tr>
    <tr>
      <td align='center' valign="middle" width="100px"><font face="DFKai-sb" size="5" color=#0000AA>區域</font></td><td><font face="DFKai-sb" color=#0000AA></font>@item.Zipcode</td>
    </tr>
    <tr>
      <td align='center' valign="middle" width="100px"><font face="DFKai-sb" size="5" color=#0000AA>地名</font></td><td><font face="DFKai-sb" color=#0000AA>@item.Name</font></td>
    </tr>

    <tr>
      <td align='center' valign="middle"><font face="DFKai-sb" size="5" color=#0000AA>地址</font></td><td><font face="DFKai-sb" color=#0000AA></font>@item.Address</td>
    </tr>
    <tr>
      <td align='center' valign="middle"><font face="DFKai-sb" size="5" color=#0000AA>描述</font></td><td><font face="DFKai-sb" color=#0000AA></font>@item.Description</td>
    </tr>
    <tr>
      <td align='center' valign="middle"><font face="DFKai-sb" size="5" color=#0000AA>營業時間</font></td><td><font face="DFKai-sb" color=#0000AA></font>@item.Opentime</td>
    </tr>
    }
  </table>
</div>
</body>
